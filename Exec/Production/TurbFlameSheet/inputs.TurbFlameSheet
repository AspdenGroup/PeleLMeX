#---------------------- Reactor CONTROL --------------------------
peleLM.chem_integrator = "ReactorCvode"
peleLM.use_typ_vals_chem = 1              # Use species/temp typical values in CVODE
ode.rtol = 1.0e-6                         # Relative tolerance of the chemical solve
ode.atol = 1.0e-5                         # Absolute tolerance factor applied on typical values
cvode.solve_type = denseAJ_direct         # CVODE Linear solve type (for Newton direction)
cvode.max_order  = 4                      # CVODE max BDF order.


#---------------------- Linear solver CONTROL --------------------
nodal_proj.verbose = 1
nodal_proj.rtol = 1.0e-11                    # [OPT, DEF=1e-11] Relative tolerance of the nodal projection
#nodal_proj.atol = 1.0e-14                   # [OPT, DEF=1e-14] Absolute tolerance of the nodal projection

mac_proj.verbose = 1
mac_proj.rtol = 1.0e-11                      # [OPT, DEF=1e-11] Relative tolerance of the MAC projection
#mac_proj.atol = 1.0e-14                     # [OPT, DEF=1e-14] Absolute tolerance of the MAC projection

diffusion.verbose = 1
diffusion.rtol = 1.0e-11                     # [OPT, DEF=1e-11] Relative tolerance of the scalar diffusion solve
#diffusion.atol = 1.0e-14                    # [OPT, DEF=1e-14] Absolute tolerance of the scalar diffusion solve

tensor_diffusion.verbose = 1
tensor_diffusion.rtol = 1.0e-11              # [OPT, DEF=1e-11] Relative tolerance of the velocity tensor diffusion solve
#tensor_diffusion.atol = 1.0e-14             # [OPT, DEF=1e-14] Absolute tolerance of the velocity tensor diffusion solve


#---------------------- Refinement CONTROL------------------------
amr.refinement_indicators = yHO2
