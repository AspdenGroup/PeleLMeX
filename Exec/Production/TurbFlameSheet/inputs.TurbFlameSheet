#---------------------- DOMAIN DEFINITION ------------------------
geometry.is_periodic = 1 1 0                        # For each dir, 0: non-perio, 1: periodic
geometry.coord_sys   = 0                            # 0 => cart, 1 => RZ
geometry.prob_lo     = 0.0      0.0      0.0        # x_lo y_lo (z_lo)
geometry.prob_hi     = 0.008416 0.008416 0.033664   # x_hi y_hi (z_hi)


#---------------------- BC FLAGS ---------------------------------
# Interior, Inflow, Outflow, Symmetry,
# SlipWallAdiab, NoSlipWallAdiab, SlipWallIsotherm, NoSlipWallIsotherm
peleLM.lo_bc = Interior Interior SlipWallAdiab     # bc in x_lo y_lo (z_lo)
peleLM.hi_bc = Interior Interior Outflow           # bc in x_hi y_hi (z_hi)


#---------------------- AMR CONTROL ------------------------------
amr.n_cell          = 128 128 512         # Level 0 number of cells in each direction
amr.max_level       = 0                   # maximum level number allowed
amr.ref_ratio       = 2 2 2 2             # refinement ratio
amr.regrid_int      = 5                   # how often to regrid
amr.n_error_buf     = 1 1 2 2             # number of buffer cells in error est
amr.grid_eff        = 0.7                 # what constitutes an efficient grid
amr.blocking_factor = 16                  # block factor in grid generation (min box size)
amr.max_grid_size   = 64                  # max box size


#---------------------- Problem ----------------------------------
prob.P_mean = 101325.0
prob.standoff = 0.028
prob.pertmag = 0.0001
prob.pertlength = 0.0
transport.use_soret=1
pmf.datafile = "pmf-BurkeDryer-phi0.4-T300.0-p1.0-soret.dat"


#---------------------- PeleLMeX CONTROL -------------------------
peleLM.v = 3                              # PeleLMeX verbose
peleLM.memory_checks=1                    # Show memory usage
peleLM.use_wbar = 1                       # Include Wbar term in species diffusion fluxes
peleLM.sdc_iterMax = 1                    # Number of SDC iterations
peleLM.num_init_iter = 3                  # Number of initial iterations


#---------------------- Temporal CONTROL -------------------------
peleLM.do_temporals     = 1                # Turn temporals ON/OFF
